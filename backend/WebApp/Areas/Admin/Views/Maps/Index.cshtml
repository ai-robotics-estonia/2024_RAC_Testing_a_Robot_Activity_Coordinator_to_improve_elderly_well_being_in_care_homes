@model IEnumerable<WebApp.Areas.Admin.ViewModels.MapViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MapName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MapIdCode)
            </th>
            <th>
                Floor Count
            </th>
            <th>
                Locations Count
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MapName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MapIdCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FloorCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationsCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
