@model IEnumerable<App.Domain.MapFloor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="Clean">Edit</a>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FloorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FloorDisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Map)
            </th>
            <th>
                Locations Count
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FloorName)
            </td>
            <td>
                @item.FloorDisplayName.Translate()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Map!.MapName)
            </td>
            <td>
                @(item.MapLocations?.Count.ToString() ?? "null")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
