@model IEnumerable<App.Domain.MapLocation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LocationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocationDisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SortPriority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatrolPriority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Map)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MapFloor)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @item.LocationDisplayName.Translate()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortPriority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatrolPriority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Map!.MapName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MapFloor!.FloorName)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>