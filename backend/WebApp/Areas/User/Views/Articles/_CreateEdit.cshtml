@model WebApp.Areas.User.ViewModels.ArticleCreateEditViewModel

<div class="form-group">
    <label asp-for="ArticleCategoryId" class="control-label"></label>
    <select asp-for="ArticleCategoryId" class="form-select" asp-items="Model.ArticleCategorySelectList"></select>
</div>
<div class="form-group">
    <label asp-for="RobotMapAppId" class="control-label"></label>
    <select asp-for="RobotMapAppId" class="form-select" asp-items="Model.RobotMapAppSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Date" class="control-label"></label>
    <input asp-for="Date" class="form-control"/>
    <span asp-validation-for="Date" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DisplayText" class="control-label"></label>
    <textarea asp-for="DisplayText" class="form-control tinymce" rows="10"></textarea>
    <span asp-validation-for="DisplayText" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PlainText" class="control-label"></label>
    <textarea asp-for="PlainText" class="form-control" rows="10"></textarea>
    <span asp-validation-for="PlainText" class="text-danger"></span>
</div>


<script src="~/lib/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
        tinymce.init({
            selector: '.tinymce',
            plugins: 'code link paste image',
            toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | pastetext | outdent indent | link unlink code | image imagetools',
    //        paste_as_text: true,
    //        toolbar: 'code',
    //        menubar: 'tools',
        });
</script>